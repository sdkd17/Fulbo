<h3 class="center">Crear Local</h3>

<div class="row white z-depth-3"  >
	<div class="col s12">
		<%= form_for @local do |f| %>
		
			<%= f.hidden_field :user_id, :value => current_user.id %>

			<div class="input-field" >
				<%= f.label :nombre %>
				<%= f.text_field :nombre %>
			</div>

			<div class="input-field" >
				<%= f.label :barrio %>
				<%= f.text_field :barrio %>
			</div>
			
			<div class="input-field">
				<%= f.label :direccion %>
				<%= f.text_field :direccion %>
			</div>

			<div class="input-field">
				<%= f.label :telefono %>
				<%= f.text_field :telefono %>
			</div>

			<div class="input-field">
				<%= f.label :email %>
				<%= f.email_field :email %> 
			</div>

			<div class="row">
				<div class="input-field col s6">
					<%= f.label :opens, "Abre" %>
					<%= f.text_field :opens %>
				</div>

				<div class="input-field col s6">
					<%= f.label :closes, "Cierra" %>
					<%= f.text_field :closes %>
				</div>

			</div>

			<%= f.submit "Crear Local", :class=>"btn" %>

		<% end %>
	</div>
</div>