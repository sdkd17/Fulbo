<h3 class="center">Crear Local</h3>

<div class="card white">
<%= form_for @local, html: { multipart: true } do |f| %>

	
	<div class="card-content">
		
		<div class="input-field" >
			<%= f.label :nombre %>
			<%= f.text_field :nombre %>
		</div>

		<div class="input-field" >
			<%= f.label :barrio %>
			<%= f.text_field :barrio %>
		</div>
		
		<div class="input-field">
			<%= f.label :direccion %>
			<%= f.text_field :direccion %>
		</div>

		<div class="input-field">
			<%= f.label :telefono %>
			<%= f.text_field :telefono %>
		</div>

		<div class="input-field">
			<%= f.label :email %>
			<%= f.email_field :email %> 
		</div>

		<div class="input-field">
			<%= f.label :opens %>
			<%= f.text_field :opens %>
		</div>
		<div class="input-field">
			<%= f.label :closes %>
			<%= f.text_field :closes %>
		</div>

	</div>


	<div class="card-action">
		<%= f.submit "Crear Local", :class=>"btn" %>
	</div>
	
<% end %>
</div>